{
  "name": "sculptgl-core",
  "version": "1.0.0",
  "description": "A WebGL 3D sculpting library - core functionality without UI",
  "keywords": [
    "webgl",
    "3d",
    "sculpting",
    "mesh",
    "graphics",
    "modeling"
  ],
  "author": "StÃ©phane GINIER",
  "license": "MIT",
  "main": "dist/sculptgl-core.umd.js",
  "module": "dist/sculptgl-core.es.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/sculptgl-core.es.js",
      "require": "./dist/sculptgl-core.umd.js",
      "types": "./types/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "types/",
    "src/",
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "file-saver": "^2.0.5",
    "gl-matrix": "^3.4.3"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^5.0.0",
    "terser": "^5.24.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "dev": "vite",
    "preview": "vite preview",
    "clean": "rm -rf dist node_modules",
    "reinstall": "pnpm clean && pnpm install",
    "prepublishOnly": "pnpm build",
    "postinstall": "npm run build || echo 'Build failed, but installation continues'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LeeJB-48/sculptgl-core.git"
  },
  "bugs": {
    "url": "https://github.com/LeeJB-48/sculptgl-core/issues"
  }
}
